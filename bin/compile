#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output

indent() {
  sed -u 's/^/       /'
}

BUILD_DIR=$1
ENV_DIR=$3

# NOTE: Currently the environment variables which will be exported to the environment
# once the dyno is finished building have not yet been exported
# Instead they are available as files in the ENV_DIR where each file's name is the key
# and the contents are the value
# Since we need some of them for the rake task to be able to run we need to export them
# before we can run it
blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$ENV_DIR" ]; then
  for e in $(ls $ENV_DIR); do
    echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $ENV_DIR/$e)"
    :
  done
fi

# This is modified to specifically work with a Ruby Rails app
# This will almost certainly not work on other apps
TESSERACT_OCR_VERSION=5.5.1
TESSERACT_OCR_TGZ=tesseract-ocr-$TESSERACT_OCR_VERSION.tar.gz

TESSERACT_VENDOR_PATH=vendor/tesseract-ocr
TESSERACT_DATA_PATH=$TESSERACT_VENDOR_PATH/share/tessdata

# Extract the Tesseract-OCR binaries into the build directory under appropriate path
BUILD_TESSERACT_VENDOR_PATH=$BUILD_DIR/$TESSERACT_VENDOR_PATH

echo "-----> Unpacking Tesseract-OCR binaries"
mkdir -p $BUILD_TESSERACT_VENDOR_PATH
tar -zxvf $TESSERACT_OCR_TGZ -C $BUILD_TESSERACT_VENDOR_PATH | indent

# Setup script that will be executed when container starts to set the environment variables
ENVSCRIPT=$BUILD_DIR/.profile.d/tesseract-ocr.sh

echo "-----> Building runtime environment for Tesseract-OCR"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\"$HOME/$TESSERACT_VENDOR_PATH/bin:\$PATH\"" > $ENVSCRIPT
echo "export LD_LIBRARY_PATH=\"$HOME/$TESSERACT_VENDOR_PATH/lib:\$LD_LIBRARY_PATH\"" >> $ENVSCRIPT
echo "export TESSDATA_PREFIX=\"$HOME/$TESSERACT_DATA_PATH\"" >> $ENVSCRIPT

# Download the custom language files into build directory under appropriate path
echo "-----> Downloading custom language files"
cd $BUILD_DIR
TASK_EXISTS=$(bundle exec rake --tasks | grep "ml_model:download_tesseract_model" | wc -l)

if [ $TASK_EXISTS -ne 0 ]; then
	TESSDATA_PREFIX=$BUILD_DIR/$TESSERACT_DATA_PATH bundle exec rake ml_model:download_tesseract_model | indent
fi
